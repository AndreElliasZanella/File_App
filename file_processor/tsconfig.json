{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "types": ["jest", "node","reflect-metadata"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist"
  },
  "base": "src",
  "paths": {
    "@handlers/*": ["handlers/*"]
  },
  "include": ["src/**/*.ts", "__tests__/**/*.ts"],
  "exclude": ["node_modules"]
}
